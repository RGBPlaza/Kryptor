<Page
    x:Class="Kryptor.Dec2Binpage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kryptor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Rectangle Name="BackgroundHolder"/>
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.6" Grid.RowSpan="4"/>
        
        <TextBlock Grid.Row="0" Style="{StaticResource IOLabel}" Text="Decimal:"/>
        <TextBox Grid.Row="1" Name="decTextBox" Style="{StaticResource IOBox}" InputScope="Number" KeyUp="decTextBox_KeyUp" Template="{StaticResource IOBoxTemplate}"/>
        <TextBlock Grid.Row="2" Style="{StaticResource IOLabel}" Text="Binary:"/>
        <TextBox Grid.Row="3" Name="binTextBox" Style="{StaticResource IOBox}" InputScope="Number" KeyUp="binTextBox_KeyUp" Template="{StaticResource IOBoxTemplate}"/>
    </Grid>
</Page>
