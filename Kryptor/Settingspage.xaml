<Page
    x:Class="Kryptor.Settingspage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kryptor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Rectangle Name="BackgroundHolder"/>
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.6" Grid.RowSpan="4"/>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="KRYPTOR" FontSize="35" FontWeight="Light" Margin="12,12,12,0" VerticalAlignment="Stretch"/>
            <StackPanel Orientation="Horizontal" Margin="12,0,12,12">
                <Rectangle HorizontalAlignment="Stretch" />
                <TextBlock Text="Made with" FontSize="25"  FontWeight="Light"/>
                <TextBlock Text="&#xE00B;" FontSize="20" FontFamily="Segoe MDL2 Assets" Height="20" Margin="8"/>
                <TextBlock Text="by RGBPlaza" FontSize="25"  FontWeight="Light"/>
                <TextBlock Text=" ©" FontSize="25" Opacity="0.3" FontWeight="Light"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
